@model VType

<h1>EDIT Visitor Type</h1>

<form asp-action="Edit" autocomplete="off">

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="Red"></span>
    </div>

    <div class="form-group">
        <label asp-for="Free" class="control-label"></label>&nbsp
        <input asp-for="Free" /> &nbsp &nbsp
        <label asp-for="Limited" class="control-label"></label>&nbsp
        <input asp-for="Limited" />
    </div>
  
    <div class="form-group">
        <label asp-for="MaxLimit" class="control-label"></label>
        <input asp-for="MaxLimit" class="form-control" />
        <span asp-validation-for="MaxLimit" class="Red"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" rows="5" wrap="soft"></textarea>
        <span asp-validation-for="Description" class="Red"></span>
    </div>

	<div class="eye">
		<input asp-for="EID" value="@Model.EID" />
        <input asp-for="ID" value="@Model.ID" />
	</div>

    <div class="form-group">
        <button type="submit" class="btn mybtn bgBase">SAVE</button>
        <button type="reset" class="btn mybtn bgBro">RESET</button>
        <a asp-action="Index" asp-route-ID="@Model.EID" class="btn mybtn bgRed">CANCEL</a>
    </div>
</form>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}