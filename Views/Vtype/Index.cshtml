<h1>ALL Visitor Types</h1>

<div style="width: 100%">
@if (ViewBag.VTypes.Count != 0)
{
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Name</th>
				<th>Limited</th>
				<th>Max Amount</th>
				<th>Free</th>
				<th style="max-width: 250px;">Description</th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			<tr style="height: 4px;">
					<td colspan="20" class="line-space"></td>
			</tr>
			@foreach(VType v in ViewBag.VTypes)
			{
				<tr>
					<td>@v.Name</td>
					<td>@v.Limited</td>
					<td>@v.MaxLimit</td>
					<td>@v.Free</td>
					<td style="max-width: 250px;">@v.Description</td>
					<td style="width: auto; text-align: right;">
					@if(await AuthorizationService.AuthorizeAsync(User, "VType Creator"))
					{
						<a asp-action="Copy" asp-route-ID="@v.ID" class="btn mybtn-sm-base">Copy</a>

						<a asp-action="Edit" asp-route-ID="@v.ID" class="btn mybtn-sm-bro">Edit</a>
					}
					@if(await AuthorizationService.AuthorizeAsync(User, "VType Killer"))
					{
						<a asp-action="Delete" asp-route-ID="@v.ID" class="btn mybtn-sm-red">Delete</a>
					}
					</td>
				</tr>
				<tr style="height: 4px;">
					<td colspan="20" class="line-space"></td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="f-info">This Event has no Visitor Types yet.</div>
}
	<br />
	<div class="text-center">
		<a asp-action="Add" asp-route-id="@ViewBag.ID" class="btn mybtn bgBase">ADD</a>
		<a asp-action="ViewEvent" asp-controller="Owner" asp-route-id="@ViewBag.ID" class="btn mybtn bgBro">BACK</a>
		@if (ViewBag.VTypes.Count != 0 && (await AuthorizationService.AuthorizeAsync(User, "Is Owner"))) 
		{
			<a asp-action="DeleteAll" asp-route-id="@ViewBag.ID" class="btn mybtn bgRed">DELETE ALL</a>
		}
	</div>
</div>
