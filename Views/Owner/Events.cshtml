@model List<Event>
<h2>All Events</h2>


@if (Model.Count() == 0)
{
	<div class="text-center f-info Accent">You don't have any Events yet.</div> 
	<br />
}
else
{
	<ul>
		@foreach (Event e in Model)
		{
			<li><a asp-action="ViewEvent" asp-controller="Owner" asp-route-id="@e.ID">@e.Name : @(e.Status == true ? "ACTIVE" : "INACTIVE"), @e.DateStart - @e.DateEnd </a></li>
		}
	</ul>
}

<a asp-action="CreateEvent" asp-controller="Owner" class="btn mybtn bgBase">ADD</a>

<a asp-action="Index" asp-controller="Owner" class="btn mybtn bgBro">BACK</a>
