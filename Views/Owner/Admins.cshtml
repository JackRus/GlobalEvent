<h1>APP ADMINS MANAGEMENT</h1>

<div class="text-center">
@if(await AuthorizationService.AuthorizeAsync(User, "Admin Creator"))
{
	<a asp-action="AddUser" asp-controller="Account" class="btn mybtn bgBase">ADD</a>
}
@if(await AuthorizationService.AuthorizeAsync(User, "Is Owner"))
{	
	<a asp-action="LockAll" asp-controller="Account" class="btn mybtn bgRed">LOCK ALL</a>
}
</div>
<br />

<table class="table table-hover">
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Login Name</th>
			<th>Level</th>
			<th>Locked</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	@foreach(var u in ViewBag.Admins)
	{
		<tr>
			<td>@u.FirstName</td>
			<td>@u.LastName</td>
			@if(u.Level == "Owner")
			{
				<td>***********</td>
			}
			else
			{
				<td>@u.UserName</td>	
			}
			<td>@u.Level</td>
			<td>TODO</td>
			<td style="width: auto; text-align: right;">
			@if(u.Level == "Owner")
			{
				<span> NO ACCESS </span>
			}
			else
			{	
				<div class="dropdown">
					<button class="btn mybtn-sm-actions bgBro" type="button" data-toggle="dropdown">Actions
					<span class="caret"></span></button>
					
					<ul class="dropdown-menu dropdown-menu-right">
					@if(await AuthorizationService.AuthorizeAsync(User, "Admin Editor"))
					{

						<li><a asp-action="EditAdmin" asp-route-ID="@u.Id">Edit</a></li>
						<li><a asp-action="Lock" asp-route-ID="@u.Id">Lock</a></li>
					}
					@if(await AuthorizationService.AuthorizeAsync(User, "Admin Killer"))
					{
						<li><a asp-action="DeleteUser" asp-controller="Account" asp-route-ID="@u.Id">Delete</a></li>
					}
					</ul>
				</div>
			}
			</td> 
		</tr>
	}
	</tbody>
</table>


