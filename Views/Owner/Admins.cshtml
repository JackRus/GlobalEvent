<h1>APP ADMINS MANAGEMENT</h1>

<div class="text-center">
	<a asp-action="AddUser" asp-controller="Account" class="btn mybtn bgBase">ADD</a>
	<a asp-action="LockAll" asp-controller="Account" class="btn mybtn bgRed">LOCK ALL</a>
</div>
<br />

<table class="table table-hover">
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Login Name</th>
			<th>Level</th>
			<th>Locked</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(var u in ViewBag.Admins)
		{
			<tr>
				<td>@u.FirstName</td>
				<td>@u.LastName</td>
				<td>@u.UserName</td>
				<td>@u.Level</td>
				<td>TODO</td>
				<td style="width: auto; text-align: right;">
					<a asp-action="EditAdmin" asp-route-ID="@u.Id" class="btn mybtn-sm-base ">Edit</a>
					<a asp-action="CopyAdmin" asp-route-ID="@u.Id" class="btn mybtn-sm-bro ">Copy</a>
					<a asp-action="DeleteAdmin" asp-route-ID="@u.Id" class="btn mybtn-sm-red ">Delete</a>
				</td> 
			</tr>
		}
	</tbody>
</table>


