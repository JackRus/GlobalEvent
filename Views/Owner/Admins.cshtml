<h1>APP ADMINS MANAGEMENT</h1>

<div class="text-center">
	<a asp-action="AddUser" asp-controller="Account" class="btn mybtn bgBase">ADD</a>
	<a asp-action="LockAll" asp-controller="Account" class="btn mybtn bgRed">LOCK ALL</a>
</div>
<br />

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Login Name</th>
			<th>Level</th>
			<th>Locked</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(var u in ViewBag.Admins)
		{
			<tr>
				<td>@u.FirstName</td>
				<td>@u.LastName</td>
				<td>@u.UserName</td>
				<td>@u.Level</td>
				<td>TODO</td>
				<td><a asp-action="ChangeClaims" asp-route-name="@u.Id" class="btn mybtn-sm-bro">Edit</a></td> 
			</tr>
		}
	</tbody>
</table>


