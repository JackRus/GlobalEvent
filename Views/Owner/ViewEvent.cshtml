@model Event

<h1> @Model.Name </h1>

@if(ViewBag.Message != null)
{
	<div id="tog" class="f-attention">@ViewBag.Message <br/>
        <a class="btn mybtn-sm-red tog inline m5-0-5-0" data-id="tog" >OK</a>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <div class="stat-name" style="background-color: @(Model.Status ? "var(--colBase)" : "grey"); color: #fff; border-bottom: none;">Status: <span class="stat">@(Model.Status ? "ACTIVE" : "INACTIVE")</span></div>
    </div>

    <div class="col-md-6">
        <div class="stat-name">ID:<span class="stat">@Model.ID</span></div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="stat-name">Starts: <span class="stat">@Model.TimeStart on @Model.DateStart </span></div>
    </div>

    <div class="col-md-6">
        <div class="stat-name">Ends: <span class="stat">@Model.TimeEnd on @Model.DateEnd </span></div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="stat-name">Tickets Sold/Orders #: <span class="stat">@Model.TicketsSold / @Model.Orders.Count() </span></div>
    </div>

    <div class="col-md-6">
        <div class="stat-name">Free tickets: <span class="stat">@(Model.Free == true ? "Yes" : "No") </span></div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="stat-name">Visitors Registered / CheckIned: <span class="stat">@Model.Visitors.Count() / @Model.Visitors.Where(v => v.CheckIned == true).Count() </span></div>
    </div>

    <div class="col-md-6">
        <div class="stat-name">Revenue Fact / Plan: <span class="stat">$@Model.RevFact / $@Model.RevPlan </span></div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="stat-name">Eventbrite's Token: <span class="stat">@Model.HttpBase </span></div>
    </div>

    <div class="col-md-6">
        <div class="stat-name">Eventbrite's Event ID: <span class="stat">@Model.EventbriteID </span></div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="stat-name">Event's Page: <br /> <a href="@Model.TicketLink" @Model.TicketLink target="_new"><strong> @Model.TicketLink </strong> </a></div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="stat-name" style="text-align: justify;">Description: <br /> <strong> @Model.Description </strong>  </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="stat-name" style="text-align: justify;">Ticket Types: <a asp-action="Index" asp-controller="Ticket" asp-route-id="@Model.ID" class="btn mybtn-sm-event" data-id="tog" >MANAGE TICKETS</a><br />
            @if (@Model.Tickets.Count() < 1)
            {
                <span>Not created yet</span>
            }
            else 
            {  
                <ul style="margin: 0px auto;">
                @foreach(Ticket t in Model.Tickets)
                {
                    <li class="inline">==> <strong> @t.Type, Price: $@t.Price </strong> </li>
                }  
                </ul> 
            }      
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="stat-name" style="text-align: justify;"> Products/Events: <a asp-action="Index" asp-controller="Product" asp-route-id="@Model.ID" class="btn mybtn-sm-event" data-id="tog" >MANAGE PRODUCTS</a><br />
            @if (@Model.Products.Count() < 1)
            {
                <span>Not created yet</span>
            }
            else 
            {  
                <ul style="margin: 0px auto;">
                @foreach(Product p in Model.Products)
                {
                    <li class="inline">==> <strong>@p.Name, Capacity: @p.Capacity</strong> </li>
                }  
                </ul> 
            }       
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="stat-name" style="text-align: justify;"> Visitor Types: <a asp-action="Index" asp-controller="VType" asp-route-id="@Model.ID" class="btn mybtn-sm-event" data-id="tog" >MANAGE VISITOR TYPES</a><br />
            @if (@Model.Types.Count() < 1)
            {
                <span>Not created yet</span>
            }
            else 
            {  
                <ul style="margin: 0px auto;">
                @foreach(VType t in Model.Types)
                {
                    <li class="inline">==> <strong>@t.Name: @(t.Free == true ? "Free" : "Paid")</strong> </li>
                }  
                </ul> 
            }
        </div>
    </div>
</div>

<br />

<a asp-action="Events" class="btn mybtn bgBase">BACK</a>
<a asp-action="EditEvent" asp-route-id="@Model.ID" class="btn mybtn bgBro">EDIT</a>
<a asp-action="DeleteEvent" asp-route-id="@Model.ID" class="btn mybtn bgRed">DELETE</a>

