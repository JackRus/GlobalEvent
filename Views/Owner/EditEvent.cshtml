@model Event

<h2>EDIT EVENT</h2>

<form asp-action="EditEvent" asp-controller="Owner" method="POST" autocomplete="off">

    <div class="form-group">
        <label asp-for="ID" class="control-label"></label>
        <div>
            <input asp-for="ID" readonly="readonly" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <div>
            <input asp-for="Status" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <div>
            <input asp-for="Name" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="DateStart" class="control-label"></label>
        <div>
            <input asp-for="DateStart" type="date" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="TimeStart" class="control-label"></label>
        <div>
            <input asp-for="TimeStart" class="form-control" type="time"/>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="DateEnd" class="control-label"></label>
        <div>
            <input asp-for="DateEnd" class="form-control" type="date"/>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="TimeEnd" class="control-label"></label>
        <div>
            <input asp-for="TimeEnd" class="form-control" type="time" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Free" class="control-label"></label>
        <div>
            <input asp-for="Free" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="RevPlan" class="control-label"></label>
        <div>
            <input asp-for="RevPlan" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <button type="submit" style="width: 80px;" class="btn mybtn bgBase">SAVE</button>
        <a asp-action="ViewEvent" asp-controller="Owner" asp-route-ID="@Model.ID" class="btn mybtn bgRed">CANCEL</a>
    </div>

</form>