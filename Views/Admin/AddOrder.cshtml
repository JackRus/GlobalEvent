@model AddOrder

<h1>Add Order</h1>
<h3> @ViewBag.Event </h3>

@if(ViewBag.Message != null) {
<div id="tog" class="f-attention">@ViewBag.Message <br/>
	<a class="btn mybtn-sm-red tog inline m5-0-5-0" data-id="tog">OK</a>
</div>
}

<form asp-action="AddOrderOk" autocomplete="off">
	<div class="row">
		<div class="col-sm-6">
			<div class="form-number-container">
				<span class="form-number">1</span> Basic info
			</div>

			<div class="form-group">
				<label asp-for="VType" class="control-label"></label>
				<select asp-for="VType" asp-items="Model.VTypes" class="form-control">
					<option value="" hidden disabled selected>
						Select Visitor Type &#x25BC;
					</option>
				</select>
				<span asp-validation-for="VType" class="Red"></span>
			</div>

			<div class="form-group">
				<label asp-for="TicketType" class="control-label"></label>
				<select asp-for="TicketType" asp-items="Model.Types" class="form-control">
					<option value="" hidden disabled selected>
						Select Ticket Type &#x25BC;
					</option>
				</select>
				<span asp-validation-for="TicketType" class="Red"></span>
			</div>

			<div class="form-group">
				<label asp-for="Amount" class="control-label"></label>
				<input asp-for="Amount" class="form-control" />
				<span asp-validation-for="Amount" class="Red"></span>
			</div>

			<div class="form-group">
				<label asp-for="Comment" class="control-label"></label>
				<textarea asp-for="Comment" rows="7" class="form-control"></textarea>
				<span asp-validation-for="Comment" class="Red"></span>
			</div>
		</div>

		<div class="col-sm-6">
			<div class="form-number-container">
				<span class="form-number">2</span> Additional info
			</div>

			<div class="form-group">
				<label asp-for="OwnerName" class="control-label"></label>
				<input asp-for="OwnerName" class="form-control" />
				<span asp-validation-for="OwnerName" class="Red"></span>
			</div>

			<div class="form-group">
				<label asp-for="OwnerEmail" class="control-label"></label>
				<input asp-for="OwnerEmail" class="form-control" />
				<span asp-validation-for="OwnerEmail" class="Red"></span>
			</div>

			<!--Phone-->
			<div class="form-group">
				<label asp-for="OwnerPhone" class="control-label"></label>
				<input asp-for="OwnerPhone" class="form-control" />
				<span asp-validation-for="OwnerPhone" class="Red"></span>
			</div>
			<!---->

			<input asp-for="EID" value="@Model.EID" class="eye" />

			<div class="form-group text-center">
				<button type="submit" class="btn mybtn bgBase">CREATE</button>
				<button type="reset" class="btn mybtn bgBro">RESET</button>
				<a asp-action="Events" class="btn mybtn bgRed">CANCEL</a>
			</div>
		</div>
	</div>
</form>

@section Scripts { @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); } }