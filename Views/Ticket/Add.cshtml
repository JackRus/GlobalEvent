@model Ticket

<h1>ADD TICKET</h1>
<h3> @ViewBag.Event.Name </h3>

<form asp-action="Add" autocomplete="off">

    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <input asp-for="Type" class="form-control"/>
        <span asp-validation-for="Type" class="Red"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="Red"></span>
    </div>

    <div class="form-group">
        <label asp-for="Limit" class="control-label"></label>
        <input asp-for="Limit" class="form-control" />
        <span asp-validation-for="Limit" class="Red"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" rows="5" wrap="soft"></textarea>
        <span asp-validation-for="Description" class="Red"></span>
    </div>

	<input asp-for="EID" value="@ViewBag.Event.ID" class="eye" />

    <div class="form-group text-center">
        <button type="submit" class="btn mybtn bgBase">ADD</button>
        <button type="reset" class="btn mybtn bgBro">RESET</button>
        <a asp-action="Index" asp-route-ID="@ViewBag.Event.ID" class="btn mybtn bgRed">CANCEL</a>
    </div>
</form>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}