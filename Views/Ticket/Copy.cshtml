@model Ticket

<h2>ADD TICKET (Copy)</h2>
<h4>Event ID: @Model.EID </h4>
<form asp-action="Copy" autocomplete="off">

    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <div>
            <input asp-for="Type" class="form-control"/>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <div>
            <input asp-for="Price" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Limit" class="control-label"></label>
        <div>
            <input asp-for="Limit" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <div>
            <textarea asp-for="Description" class="form-control" rows="5" wrap="soft"></textarea>
        </div>
    </div>

	<div style="display: none;">
		<input asp-for="EID" value="@Model.EID" class="form-control" />
        <input asp-for="ID" value="@Model.ID" class="form-control" />
	</div>

    <div class="form-group">
        <button type="submit" style="width: 80px;" class="btn mybtn bgBase">ADD</button>
        <button type="reset" style="width: 80px;" class="btn mybtn bgBro">RESET</button>
        <a asp-action="Index" asp-route-ID="@Model.EID" class="btn mybtn bgRed">CANCEL</a>
    </div>
</form>