<h1>ALL ToDo Items</h1>

<div style="width: 100%">
@if (ViewBag.Todos.Count != 0)
{
	<table class="table table-hover width700">
		<thead>
			<tr>
				<th>Task</th>
				<th>Deadline</th>
				<th>Event ID</th>
				<th>Comments</th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			<tr style="height: 4px;">
					<td colspan="20" class="line-space"></td>
			</tr>
			@foreach(ToDo t in ViewBag.Todos)
			{
				<tr>
					<td>@t.Task</td>
					<td>@t.Deadline</td>
					<td>@t.EID</td>
					<td>@t.Comments</td>
					<td>
						<a asp-action="Copy" asp-route-ID="@t.ID" class="btn mybtn-sm-base">Copy</a>

						<a asp-action="Edit" asp-route-ID="@t.ID" class="btn mybtn-sm-bro">Edit</a>
					
						<a asp-action="Delete" asp-route-ID="@t.ID" class="btn mybtn-sm-red">Delete</a>
					</td>
				</tr>
				<tr style="height: 4px;">
					<td colspan="20" class="line-space"></td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="f-info">You have no ToDo Items yet.</div>
}
	<br />
	<div class="text-center">
		<a asp-action="AddFull" class="btn mybtn bgBro">ADD</a>
		<a asp-action="Index" asp-controller="Owner" class="btn mybtn bgBase">BACK</a>

		@if (ViewBag.Todos.Count != 0) 
		{
			<a asp-action="DeleteAll" class="btn mybtn bgRed">DELETE ALL</a>
		}
	</div>
</div>
