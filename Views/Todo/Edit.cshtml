@model ToDo

<h1>EDIT ToDo Item</h1>

<form asp-action="Edit" autocomplete="off">
    <div class="form-group">
        <label asp-for="Done" class="control-label">Mark As Done</label> &nbsp
        <span class="true-false" data-id="box1"></span>
        <input asp-for="Done" class="eye" id="box1"/> &nbsp &nbsp
    </div>

    <div class="form-group">
        <label asp-for="Task" class="control-label"></label>
        <textarea asp-for="Task" class="form-control" rows="2"></textarea>
        <span asp-validation-for="Task" class="Red"></span>
    </div>

    <div class="form-group">
        <label asp-for="Deadline" class="control-label"></label>
        <input asp-for="Deadline" type="date" class="form-control" />
        <span asp-validation-for="Deadline" class="Red"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comments" class="control-label"></label>
        <textarea asp-for="Comments" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Comments" class="Red"></span>
    </div>

    <div class="form-group">
        <label asp-for="EID" class="control-label"></label>
        <select asp-for="EID" asp-items="ViewBag.EventList" class="form-control">
            <option value="0" selected>
                No specific event
            </option>
        </select>
        <span asp-validation-for="EID" class="Red"></span>
    </div>

    <input asp-for="ID" value="@Model.ID" class="eye" />

    <div class="form-group text-center">
        <button type="submit" class="btn mybtn bgBase">SAVE</button>
        <button type="reset" class="btn mybtn bgBro">RESET</button>
        <a asp-action="Index" class="btn mybtn bgRed">CANCEL</a>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}