@using System.Linq

<h2>ALL Products</h2>
<h4>Event ID: @ViewBag.ID </h4>
<div style="width: 100%">
	@if (ViewBag.Products.Count != 0)
	{
		<table class="table table-hover" style="margin: 0 auto;">
			<thead>
				<tr>
					<th>Name</th>
					<th>Capacity</th>
					<th>Status</th>
					<th>Starts on</th>
					<th>Ends on</th>
					<th>Free</th>
					<th>Tickets</th>
					<th style="max-width: 300px;">Description</th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				<tr style="height: 4px;">
						<td colspan="20" style="padding: 0px; background-color: gainsboro"></td>
				</tr>
				@foreach(Product p in ViewBag.Products)
				{
					<tr>
						<td>@p.Name</td>
						<td>@p.Capacity</td>
						<td>@p.Status</td>
						<td>@p.DateStart <br /> @p.TimeStart</td>
						<td>@p.DateEnd <br /> @p.TimeEnd</td>
						<td>
							@(p.Free ? "Yes" : "No")
						</td>
						<td>
							@{
								if (p.TTypes != null && p.TTypes != "")
                				{
									var i = @p.TTypes.Split('|').ToList();
									foreach(string s in i)
									{
										<div>@s</div>
									}
								}
							}
						</td>
						<td style="max-width: 300px;">@p.Description </td>
						<td>
							<a asp-action="Copy" asp-controller="Product" asp-route-ID="@p.ID" class="btn mybtn-sm-base">Copy</a>

							<a asp-action="Edit" asp-controller="Product" asp-route-ID="@p.ID" class="btn mybtn-sm-bro">Edit</a>

							<a asp-action="Delete" asp-controller="Product" asp-route-ID="@p.ID" class="btn mybtn-sm-red">Delete</a>

							<a asp-action="SelectTickets" asp-controller="Product" asp-route-ID="@p.ID" asp-route-EID="@p.EID" class="btn mybtn-sm-base">Tickets</a>
						</td>
					</tr>
					<tr style="height: 4px;">
						<td colspan="20" style="padding: 0px; background-color: gainsboro"></td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<div class="text-center f-info Accent">This Event has no Products yet.</div>
	}
	<br />
	<div class="table table-hover">
		<a asp-action="Add" asp-route-id="@ViewBag.ID" class="btn mybtn bgBro">ADD</a>
		<a asp-action="ViewEvent" asp-controller="Owner" asp-route-id="@ViewBag.ID" class="btn mybtn bgBase">BACK</a>
	@if (ViewBag.Products.Count != 0) 
	{
		<a asp-action="DeleteAll" asp-route-id="@ViewBag.ID" class="btn mybtn bgRed">DELETE ALL</a>
	}
	</div>
</div>
