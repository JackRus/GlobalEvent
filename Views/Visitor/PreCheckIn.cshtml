@model Visitor
@{
	Layout = "_NoBody";
}

<div class="row c-c pad10" style="width: 400px;">
	<div class="text-center">
		<h1>Check In</h1>
		<h4>Please provide your Registration Number:</h4>
	</div>

	@if(ViewBag.Message != null)
	{
		<br />
		<div class="f-attention">
			<span>@ViewBag.Message </span>
		</div>
	}

	<br />

	<div class="text-center">

		<form asp-action="CheckIn" autocomplete="off">

			<div class="form-group">
				<input asp-for="RegistrationNumber" class="form-control input-large" />
			</div>

			<div style="display: none;">
				<input asp-for="EID" value="@Model.EID"/>
			</div>
			<br />

			<a asp-action="Menu" asp-controller="Home" asp-route-EID="@Model.EID" class="btn mybtn bgRed">Cancel</a>

			<button type="submit" class="btn mybtn bgBase" style="width: 80px;">Check In</button>

		</form>	
	</div>
	
	<br /><br />

	<div class="row text-center">
		<a data-id="div1" class="questions">I forgot my registration number.</a>
		<div id="div1" class="answer">
			...
		</div>

		<a data-id="div2" class="questions">I forgot or don't know my Order Number.</a>
		<div id="div2" class="answer">
			You have a few possible solutions:<br/>
			1. ... <br />
			2. ... <br />
			3. ...
		</div>

		<a data-id="div3" class="questions">I'm not registered.</a>
		<div id="div3" class="answer">
			You can purchase a ticket on Eventbrite.com.
		</div>
	</div>
</div>