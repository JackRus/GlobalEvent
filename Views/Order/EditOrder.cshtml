@model Order

<h1>EDIT Order</h1>
<h3> @ViewBag.Event </h3>

@if(ViewBag.Message != null) 
{
	<div id="tog" class="f-attention">@ViewBag.Message <br/>
		<a class="btn mybtn-sm-red tog inline m5-0-5-0" data-id="tog">OK</a>
	</div>
}

<form asp-action="EditOrder" asp-controller="Order" autocomplete="off">
	<div class="row">
		<div class="col-sm-6">
			<div class="form-number-container">
				<span class="form-number">1</span> Basic info
			</div>

			<div class="form-group">
				<label asp-for="VType" class="control-label"></label>
				<input asp-for="VType" readonly class="form-control" />
			</div>

			<div class="form-group">
				<label asp-for="TicketType" class="control-label"></label>
				<input asp-for="TicketType" readonly class="form-control" />
			</div>

			<div class="form-group">
				<label asp-for="Amount" class="control-label"></label>
				<input asp-for="Amount" readonly class="form-control" />
				<span asp-validation-for="Amount" class="Red"></span>
			</div>

			<div class="form-group">
                <label asp-for="Cancelled" class="control-label"></label>&nbsp
                <span class="true-false" data-id="box1"></span>
                <input asp-for="Cancelled" class="eye" id="box1"/> 
            </div>
		</div>

		<div class="col-sm-6">
			<div class="form-number-container">
				<span class="form-number">2</span> Additional info
			</div>

			<div class="form-group">
				<label asp-for="OwnerName" class="control-label"></label>
				<input asp-for="OwnerName" class="form-control" />
				<span asp-validation-for="OwnerName" class="Red"></span>
			</div>

			<div class="form-group">
				<label asp-for="OwnerEmail" class="control-label"></label>
				<input asp-for="OwnerEmail" class="form-control" />
				<span asp-validation-for="OwnerEmail" class="Red"></span>
			</div>

			<!--Phone-->
			<div class="form-group">
				<label asp-for="OwnerPhone" class="control-label"></label>
				<input asp-for="OwnerPhone" class="form-control" />
				<span asp-validation-for="OwnerPhone" class="Red"></span>
			</div>
			<!---->

			<input asp-for="ID" value="@Model.ID" class="eye" />

			<div class="form-group text-center">
				<button type="submit" class="btn mybtn bgBase">SAVE</button>
				<button type="reset" class="btn mybtn bgBro">RESET</button>
				<a asp-action="Dashboard" asp-controller="Admin" class="btn mybtn bgRed">CANCEL</a>
			</div>
		</div>
	</div>
</form>

@section Scripts { @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); } }